{% block html %}
    <!DOCTYPE html>
    <html lang="{{ app.locale }}">
        <head>
            {% block metas %}{% endblock %}
            <title>{% block title %}{% endblock %}</title>
            {% block stylesheets %}{% endblock %}
        </head>
        <body {% block body_attr %}{% endblock %}>
            {% block body %}{% endblock %}
            {% block javascripts %}{% endblock %}
        </body>
    </html>
{% endblock %}