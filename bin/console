#!/usr/bin/env php
<?php

// Constants.
define('CLI', true);
define('ROOT', __DIR__ . '/..');

// Disable time limit.
set_time_limit(0);

// Load dependencies.
require_once ROOT . '/vendor/autoload.php';

// Manage console input.
use Symfony\Component\Console\Input\ArgvInput;
$input = new ArgvInput();
define('ENV', $input->getParameterOption(array('--env', '-e'), getenv('SYMFONY_ENV') ?: 'dev'));

// Create application.
require ROOT . '/src/app.php';

// Run console.
$console = require ROOT . '/src/console.php';
$console->run();
